%h1 Neuer Benutzer anlegen

= form_with(model: @user, local: true) do |form|
  .form-group
    = form.label :email
    = form.email_field :email, class: 'form-control', required: true

  .form-group
    = form.label :password
    = form.password_field :password, class: 'form-control', required: true

  .form-group
    = form.label :role
    = form.select :role, User::VALID_ROLES, { include_blank: true }, class: 'form-control', required: true

  .form-group
    = form.submit 'Benutzer anlegen', class: 'btn btn-success'

